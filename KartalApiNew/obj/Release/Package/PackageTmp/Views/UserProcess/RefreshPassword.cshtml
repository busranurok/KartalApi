
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Signin Template for Bootstrap</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

</head>


<body class="text-center">

    <script>

        var change = () => {

        }

        function changePassword() {
            var password = $("#password").val();
            var repeatPassword = $("#repeatPassword").val();
            var email = "@ViewBag.Email";

            if (password == "" || repeatPassword == "") {
                alert("Şifreyi boş giremezsiniz!");
            }

            if (password != repeatPassword) {
                alert("Şifreleriniz uyuşmuyor!");
            }

            else {

                var data = {
                    eposta : email,
                    sifre  : password
                };

                $.ajax({
                    type: 'POST',
                    url: '/UserProcess/ChangePassword',
                    data: data,
                    success: function (data) {
                        alert("Şifre değiştirme işlemi başarılı");

                    },
                    error: function (error) {
                        console.log("hata :" + JSON.stringify(error));
                        alert("Şifre değiştirme işlemi başarısız");

                    }
                });
            }

        }
    </script>

    <div class="container">
        <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <label for="inputEmail" class="sr-only">Yeni Şifre</label>
        <input type="password" id="password" class="form-control" placeholder="Password " required="" autofocus="">
        <br />
        <label for="inputPassword" class="sr-only">Yeni Şifre Tekrar</label>
        <input type="password" id="repeatPassword" class="form-control" placeholder="Again Password" required="">
        <br />
        <input type="button" onclick="changePassword()" class="btn btn-success btn-block" value="Kaydet" />
       
    </div>


</body>
</html>
